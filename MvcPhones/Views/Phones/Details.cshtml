@model MvcPhones.Models.Phones

@{
    ViewData["Title"] = "Details";
}

<h1>Phone Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <hr />
            <dl class="row">
                <div class="col-sm-4">
                    <dt>Brand:</dt>
                </div>
                <div class="col-sm-8">
                    <dd>@Html.DisplayFor(model => model.Brand)</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Model:</dt>
                </div>
                <div class="col-sm-8">
                    <dd>@Html.DisplayFor(model => model.Model)</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Price:</dt>
                </div>
                <div class="col-sm-8">
                    <dd>â‚¬@Html.DisplayFor(model => model.Price)</dd>
                </div>
                <div class="col-sm-4">
                    <dt>Description:</dt>
                </div>
                <div class="col-sm-8">
                    <dd>@Html.DisplayFor(model => model.Description)</dd>
                </div>
            </dl>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-sm-12">
                    <div class="text-center">
                        <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.ImageUrl">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
        
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2"> Edit </a>

    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-primary mr-2"> Delete </a>
    
    <a asp-action="Index" class="btn btn-outline-primary float-right">
        <i class="bi bi-eye-fill"></i> Back to List
    </a>
</div>